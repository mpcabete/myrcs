alias tt="vim ~/.myrcs/.tmuxrc"

# tmux rc source and alias
alias tn="tmux -u -f ~/.myrcs/.tmuxrc new"
alias ta="tmux -u -f ~/.myrcs/.tmuxrc attach"

alias ls="ls --color=auto"
